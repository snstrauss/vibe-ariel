{
  "name": "ariel",
  "version": "1.0.0",
  "description": "Ariel - A tool to define Mermaid graphs using JSX syntax with component composition",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ariel": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc -p examples/tsconfig.json",
    "dev": "tsc --watch",
    "test": "jest",
    "demo": "node dist/demo.js",
    "cli": "node dist/cli.js",
    "example": "npm run build && npm run build:examples && node dist-examples/flow-example.js"
  },
  "keywords": ["jsx", "mermaid", "graph", "react", "render-jsx"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "preact": "^10.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  }
} 